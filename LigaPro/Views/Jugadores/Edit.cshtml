@model LigaPro.Models.Jugadores

@{
    ViewData["Title"] = "Edit";
}

<div class="edit-page"> <!-- Añadir la clase edit-page aquí para aplicar el fondo -->
    <h1>Edit</h1>

    <h4>Jugadores</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
