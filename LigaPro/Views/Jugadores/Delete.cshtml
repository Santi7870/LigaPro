@model LigaPro.Models.Jugadores

@{
    ViewData["Title"] = "Eliminar Jugador";
}

<!-- Aplicamos la clase para el fondo degradado -->
<div class="create-page">
    <h1 class="text-center">ELIMINAR JUGADOR</h1>

    <h3 class="text-center">¿Está seguro de que desea eliminar esto?</h3>
    <div>
        <h4 class="text-center">Detalles del Jugador</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Posicion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Posicion)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Edad)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Edad)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IdEquipo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdEquipo)
            </dd>
        </dl>

        <form asp-action="DeleteConfirmed" class="text-center">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn custom-btn-delete" /> <!-- Botón estilizado en rojo -->
            |
            <a asp-action="Index" class="btn btn-link">Volver a la lista</a> <!-- Enlace estilizado -->
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

